<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: add the step number / check mark dynamically -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_check_circle_primary_blue_500_24dp"
        android:textColor="@color/white"
        android:textSize="@dimen/vertical_stepper_circle_font_size"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="143dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/vertical_stepper_text_transparency_87_percent_black"
        android:textSize="@dimen/vertical_stepper_step_font_size"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <!-- TODO: add the vertical line connector between icons -->
    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vertical_stepper_vertical_div_view_start_margin"
        android:background="@color/material_grey_400" />

    <ImageView
        android:id="@+id/vertical_stepper_active_step_thumbnail_image_view"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/vertical_stepper_description"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/vertical_stepper_active_step_short_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="147dp" />

    <!-- TODO: add corner radius & 16dp of text padding left & right -->
    <Button
        android:id="@+id/vertical_stepper_active_step_raised_continue_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/material_blue_500"
        android:elevation="@dimen/vertical_stepper_active_button_raised_elevation"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/vertical_stepper_active_button_padding"
        android:text="@string/button_continue"
        android:textColor="@color/white"
        android:textSize="@dimen/vertical_stepper_active_button_font_size"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="439dp" />

    <Button
        android:id="@+id/vertical_stepper_active_step_flat_cancel_button"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/vertical_stepper_active_button_padding"
        android:text="@string/button_cancel"
        android:textSize="@dimen/vertical_stepper_active_button_font_size"
        tools:layout_editor_absoluteY="175dp"
        tools:layout_editor_absoluteX="161dp" />

</android.support.constraint.ConstraintLayout>